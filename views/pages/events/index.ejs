<% if (messages[0]) { %>
  <div class="alert alert-success alert-edit-profile text-center">
    <p><%= messages[0] %><a href="/profiles/update" class="edit-button"><i class="far fa-edit"></i></a></p>
  </div>
<% }; %>
<div class="container">
  <% events.forEach((event) => { %>
    <div class="event-card">
      <div class="date-time">
        <p><%= event.date %></p>
        <p><%= event.time %></p>
      </div>
      <img src="https://maps.googleapis.com/maps/api/staticmap?center=
        <%= event.location.coordinates[1] %>,
          <%= event.location.coordinates[0] %>&zoom=16&size=1600x300&key=
            <%= process.env.STATIC_GOOGLE_API_KEY %>" alt="" class="mapa">
      <div class="location">
        <h5><%= event.location.address %></h5>
      </div>
      <div class="title">
        <h3><%= event.title %></h3>
      </div>
      <div class="guests">
        <p><%= event.guests.length %> Ironhackers</p>
      </div>
      <a href="/events/<%= event._id %>" class="link"></a>
    </div>
  <% }); %>
</div>


