<div class="form-container container">
  <h1 class="form-title">Create Event</h1>
  <form method="POST" action="/events">
    <div class="field">
      <input type="text" placeholder="Title" name="title" />
    </div>
    <div class="field">
      <input type="text" placeholder="Description" name="description" />
    </div>
    <div class="field">
      <input type="text" placeholder="Location" name="location" />
      <label for="">Latitude</label>
      <input type="text" name="latitude" placeholder="Latitude" value="" id="latitude">
      <label for="">Longitude</label>
      <input type="text" name="longitude" placeholder="Longitude" value="" id="longitude">
      <div id="map"></div>
    </div>
    <div class="field">
      <input type="text" placeholder="Date" name="date" />
    </div>
    <div class="field">
      <input type="text" placeholder="Time" name="time" />
    </div>
    <div class="field">
      <input type="text" placeholder="Picture" name="picture" />
    </div>
    <div class="field submit">
      <button type="submit" class="btn btn-primary">Create</button>
    </div>
  </form>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.18.0/axios.min.js"></script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCCACjDHiiV3juiL1ms8QunrHol2_5PSUs"></script>

<script src="/javascripts/main.js"></script>